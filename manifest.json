{
    "manifest_version": 2,
    "name": "RapidLinks",
    "description": "Quickly launch your favorite websites with keyboard shortcuts",
    "version": "1.0",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon16.png",
        "default_title": "Launch websites with keyboard shortcuts"
    },
    "permissions": [
        "storage"
    ]
}